#version 430 core
precision mediump float;

in vec4 out_color;
in vec2 out_texcoord;
out vec4 frag_color;

uniform layout (binding = 0) sampler2D tex;
uniform layout (location = 0) int texture_bound;

void main() {
    frag_color = out_color;
    if (texture_bound == 1) {
        frag_color *= texture(tex, out_texcoord);
    } 
}
